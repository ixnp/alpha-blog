

<% if @user.errors.any? %>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %> </li>
    <% end %>
    </ul>
<% end %>
<h1>Edit your account</h1>
<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <p>
    <%= f.label :username %><br />
    <%= f.text_field :username, placeholder:"enter username" %>
    </p>
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "enter email" %>
    </p>
    </p>
    <%= f.label :password %><br />
    <%= f.password_field :password, placeholder: "enter password" %>
    </p>

        <p>
        <%= f.submit "update account" %>
        </p>


<% end %>